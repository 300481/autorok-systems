#cloud-config
ssh_authorized_keys:
  - {{ .PublicKey }}
hostname: {{ .Hostname }}
rancher:
  repositories:
    rancheros-firewall:
      url: https://raw.githubusercontent.com/300481/rancheros-firewall/master
  services_include:
    rancheros-firewall: true
    crontab: true
  network:
    interfaces:
      eth0:
        address: {{ .AddressCIDR }}
        gateway: {{ .Gateway }}
        mtu: {{ .MTU }}
        dhcp: {{ .DHCP }}
    dns:
      nameservers:
      {{- range .Nameservers }}
      - {{ . }}
      {{- end }}
runcmd:
- sudo mkdir /mnt/data
